@model Rio.Membership.ActivateEmailModel

<html>
<head>
    <title>Activate your Teacher account</title>
</head>
<body>
    <p>@Model.DisplayName,</p>

    <p>We received a request to create a new account on Rio with your e-mail address.</p>

    <p>Click the link below to activate your account:</p>

    <p><a href="@Model.ActivateLink">@Model.ActivateLink</a></p>

    <p>Login Url: <a href="https://omrapp.azurewebsites.net/">https://omrapp.azurewebsites.net/</a></p>

    <p>UserName : @Model.Username</p>

    <p>Password : @Model.Password</p>

    <p>If it wasn't you who requested this, you can ignore this email.</p>

    Thanks,
    The "OMR" Team
</body>
</html>